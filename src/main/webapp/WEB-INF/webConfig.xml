<?xml version="1.0" encoding="UTF-8"?>
<web-config>
    <package-scan>ticket</package-scan>

    <session-timeout>30</session-timeout>

    <welcome-url>/login</welcome-url>

    <url-patterns>
        <url-pattern>/login</url-pattern>

        <!-- Access can be a list of roles, or * for any role -->
        <url-pattern access="admin,user">/home</url-pattern>
    </url-patterns>

    <message-files>
        <message-file>texts</message-file>
    </message-files>

    <default-locale>en</default-locale>
</web-config>